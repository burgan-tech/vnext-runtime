{
  "key": "account-details-input",
  "version": "1.0.0",
  "domain": "core",
  "flow": "sys-schemas",
  "flowVersion": "1.0.0",
  "tags": [
    "banking",
    "account-details",
    "input-schema",
    "demand-deposit"
  ],
  "attributes": {
    "type": "workflow",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.vnext.com/banking/account-details-input.json",
    "title": "Account Details Input Schema",
    "description": "Schema for account details input during account opening",
    "schema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "https://schemas.vnext.com/banking/account-details-input.json",
      "title": "Account Details Input Schema",
      "description": "Schema for account details input during account opening",
      "type": "object",
      "required": [
        "accountName",
        "currency",
        "branchCode"
      ],
      "properties": {
        "accountName": {
          "type": "string",
          "title": "Account Name",
          "description": "Name/alias for the account",
          "minLength": 1,
          "maxLength": 50,
          "pattern": "^[a-zA-ZğüşıöçĞÜŞİÖÇ0-9\\s\\-_]+$"
        },
        "currency": {
          "type": "string",
          "title": "Currency",
          "description": "Account currency",
          "oneOf": [
            {
              "const": "TRY",
              "description": "Turkish Lira"
            },
            {
              "const": "USD",
              "description": "US Dollar"
            },
            {
              "const": "EUR",
              "description": "Euro"
            },
            {
              "const": "GBP",
              "description": "British Pound"
            }
          ]
        },
        "branchCode": {
          "type": "string",
          "title": "Branch Code",
          "description": "Branch code where account will be opened",
          "pattern": "^[0-9]{4}$"
        },
        "initialDeposit": {
          "type": "number",
          "title": "Initial Deposit",
          "description": "Initial deposit amount (optional)",
          "minimum": 0,
          "maximum": 1000000
        },
        "accountPurpose": {
          "type": "string",
          "title": "Account Purpose",
          "description": "Purpose of the account",
          "oneOf": [
            {
              "const": "personal-banking",
              "description": "Kişisel Bankacılık - Personal Banking"
            },
            {
              "const": "salary-account",
              "description": "Maaş Hesabı - Salary Account"
            },
            {
              "const": "savings",
              "description": "Tasarruf - Savings"
            },
            {
              "const": "business-expenses",
              "description": "İş Giderleri - Business Expenses"
            }
          ]
        },
        "notifications": {
          "type": "object",
          "title": "Notification Preferences",
          "description": "Notification settings for the account",
          "properties": {
            "smsNotifications": {
              "type": "boolean",
              "title": "SMS Notifications",
              "description": "Enable SMS notifications",
              "default": true
            },
            "emailNotifications": {
              "type": "boolean",
              "title": "Email Notifications",
              "description": "Enable email notifications",
              "default": true
            },
            "pushNotifications": {
              "type": "boolean",
              "title": "Push Notifications",
              "description": "Enable push notifications",
              "default": true
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}